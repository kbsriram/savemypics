<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="ThemeLightNoTitleBar" parent="android:Theme.Light.NoTitleBar">
  </style>

  <style name="StandardContainer">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:paddingLeft">@dimen/grid_b_3</item>
    <item name="android:paddingRight">@dimen/grid_b_3</item>
  </style>

  <style name="Divider">
    <item name="android:background">@color/divider_color</item>
    <item name="android:focusable">false</item>
    <item name="android:clickable">false</item>
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">1sp</item>
    <item name="android:layout_marginTop">@dimen/grid_b_12</item>
  </style>

  <style name="Title">
    <item name="android:textSize">@dimen/text_size_medium</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">@android:color/black</item>
    <item name="android:clickable">false</item>
    <item name="android:layout_marginTop">@dimen/grid_b_3</item>
    <item name="android:layout_marginBottom">@dimen/grid_b_2_3</item>
  </style>

  <style name="BigTitle">
    <item name="android:textSize">@dimen/text_size_large</item>
    <item name="android:textColor">@android:color/black</item>
    <item name="android:clickable">false</item>
    <item name="android:layout_marginTop">@dimen/grid</item>
    <item name="android:layout_marginBottom">@dimen/grid_b_6</item>
  </style>

  <style name="Body">
    <item name="android:textSize">@dimen/text_size_medium</item>
    <item name="android:textColor">@color/dark</item>
    <item name="android:clickable">false</item>
    <item name="android:layout_marginBottom">@dimen/grid_b_6</item>
  </style>

  <style name="FlatButton">
    <item name="android:background">@drawable/flat_button_background</item>
    <item name="android:textColor">@color/flat_text</item>
    <item name="android:textSize">@dimen/text_size_large</item>
    <item name="android:layout_height">@dimen/grid</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:gravity">center</item>
  </style>

  <style name="FlatRedButton">
    <item name="android:background">@drawable/flat_red_button_background</item>
    <item name="android:textColor">@color/flat_red_text</item>
    <item name="android:textSize">@dimen/text_size_large</item>
    <item name="android:layout_height">@dimen/grid</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:gravity">center</item>
  </style>

  <style name="BorderlessButton">
    <item name="android:background">@drawable/clickable_background</item>
    <item name="android:textColor">@color/borderless_text</item>
    <item name="android:textSize">@dimen/text_size_medium</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">wrap_content</item>
  </style>

</resources>
